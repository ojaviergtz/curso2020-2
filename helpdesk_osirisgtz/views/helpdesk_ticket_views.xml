<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="helpdesk_ticket_action" model="ir.actions.act_window">
        <field name="name">Tickets</field>
        <field name="res_model">helpdesk.ticket</field>
        <field name="view_mode">kanban,tree,form,pivot,graph,calendar</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                    Click to create Tickets
            </p>
        </field>
    </record>

    <record id="helpdesk_ticket_view_tree" model="ir.ui.view">
        <field name="name">helpdesk.view.tree</field>
        <field name="model">helpdesk.ticket</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="date"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <record id="helpdesk_ticket_view_form" model="ir.ui.view">
        <field name="name">helpdesk.view.form</field>
        <field name="model">helpdesk.ticket</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button string="Assign" type="object" name="btn_assigned"
                        attrs="{'invisible':[('state', '!=', 'new')]}"/>
                    <button string="In Progress" type="object" name="btn_progress"
                        states="assigned,pending"/>
                    <button string="Pending" type="object" name="btn_pending"
                        states="in_progress"/>
                    <button string="Done"  type="object" name="btn_done"
                        states="in_progress"/>
                    <button string="Cancel" type="object" name="btn_cancel"
                        states="in_progress,assigned,pending"/>

                    <field name="state" widget="statusbar" statusbar_visible="new,done" />
                </header>

                <sheet>
                    <div>
                        <h1>
                                Ticket: <field name="name" />
                        </h1>
                    </div>
                    <group>
                        <group name="right">
                            <field name="date"/>
                            <field name="due_date" />
                            <field name="partner_id" context="{'default_user_id': user_id,
                                'default_company_type':'person', 'search_default_type_person': 1}"/>
                        </group>
                        <group name="left">
                            <field name="assigned"/>
                            <field name="user_id" />
                            <field name="tickets_for_user"/>
                            <field name="dedicated_time" widget="float_time"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Description">
                            <group string="Description">
                                <field name="description" nolabel="1" colspan='2'/>
                                <field name="tag_ids" nolabel="1" colspan='2'
                                    context="{'tree_view_ref':'helpdesk_osirisgtz.helpdesk_tag_view_tree_related','form_view_ref': 'helpdesk_osirisgtz.helpdesk_tag_view_form_related'}"
                                    options="{'no_create': True}"/>
                                <field name="tag_generator" />
                                <button string="Add new tag" type="object"
                                    name="create_new_tag"/>
                            </group>
                        </page>
                        <page string="Quality">
                            <group string="Actions">
                                <field name="action_ids" nolabel="1" context="{'default_date': date}">
                                <tree editable="bottom">
                                    <field name="name"/>
                                    <field name="date"/>
                                    <field name="dedicated_time" widget="float_time"/>
                                </tree>
                                <!-- If the previous tree is editable we dont need to define
                                    a form since we only can edit what we have in the tree-->
                                <!--<form>
                                    <group>
                                        <field name="name"/>
                                        <field name="date"/>
                                    </group>
                                    </form>-->
                                </field>
                            </group>
                            <group string="Corrective">
                                <field name="corrective_action" nolabel="1"/>
                            </group>
                            <group string="Preventive">
                                <field name="preventive_action" nolabel="1"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <record id="helpdesk_ticket_view_search" model="ir.ui.view">
      <field name="name">helpdesk.ticket.view.search</field>
      <field name="model">helpdesk.ticket</field>
      <field name="arch" type="xml">
          <search>
              <group>
                  <field name="name" />
                  <field name="user_id" />
              </group>
              <filter name="not_due_date" string="Not Due Date" domain="[('due_date', '=', False)]"/>
              <separator/>
              <filter name="group_due_date" string="Due Date" context="{'group_by': 'due_date'}"/>
              <filter name="group_user_id" string="User ID" context="{'group_by': 'user_id'}"/>
          </search>
      </field>
    </record>

    <record id="helpdesk_ticket_view_pivot" model="ir.ui.view">
      <field name="name">helpdesk.ticket.view.pivot</field>
      <field name="model">helpdesk.ticket</field>
      <field name="arch" type="xml">
          <pivot>
              <field name="user_id" type="row" />
              <field name="dedicated_time" type="col" interval="month" />
          </pivot>
      </field>
    </record>

    <record id="helpdesk_ticket_view_graph" model="ir.ui.view">
      <field name="name">helpdesk.ticket.view.graph</field>
      <field name="model">helpdesk.ticket</field>
      <field name="arch" type="xml">
          <graph type="pie" >
              <field name="user_id" />
              <field name="dedicated_time" type="measure"/>
          </graph>
      </field>
    </record>

    <record id="helpdesk_ticket_view_calendar" model="ir.ui.view">
      <field name="name">helpdesk.ticket.view.calendar</field>
      <field name="model">helpdesk.ticket</field>
      <field name="arch" type="xml">
          <calendar date_start="date" mode="week"
              form_view_id="helpdesk_ticket_view_form" quick_add="True"
              color="due_date">
          <field name="user_id" />
          <field name="due_date" filters="True"/>
          </calendar>
      </field>
    </record>

    <record id="helpdesk_ticket_view_kanban" model="ir.ui.view">
      <field name="name">helpdesk.ticket.view.kanban</field>
      <field name="model">helpdesk.ticket</field>
      <field name="arch" type="xml">
          <kanban default_group_by="user_id"  class="o_kanban_small_column" >
              <field name="user_id"/>
              <field name="color"/>
              <field name="dedicated_time"/>
              <field name="date"/>
              <field name="due_date"/>
              <templates>
                  <t t-name="kanban-box">
                      <div t-attf-class="#{!selection_mode ? kanban_color(record.color.raw_value) : ''} oe_kanban_global_click">

                      <div class="o_dropdown_kanban dropdown">

                          <a class="dropdown-toggle btn" data-toggle="dropdown" role="button" href="#">
                              <span class="fa fa-ellipsis-v"/>
                          </a>

                          <div class="dropdown-menu" role="menu">
                              <t t-if="widget.editable">
                                  <a role="menuitem" type="edit" class="dropdown-item">Edit</a>
                              </t>
                              <t t-if="widget.deletable">
                                  <a role="menuitem" type="delete" class="dropdown-item">Delete</a>
                              </t>
                              <ul class="oe_kanban_colorpicker" data-field="color"/>
                          </div>
                      </div>

                      <div class="oe_kanban_content">
                          <div><strong class="o_kanban_record_title">
                                  <field name="name"/>
                              </strong>
                          </div>
                          <ul>
                              <li><field name="dedicated_time" widget="float_time"/></li>
                              <li><field name="due_date"/></li>
                          </ul>
                          <div class="o_kanban_record_bottom">
                              <div class="oe_kanban_bottom_left">
                                  <field name="user_id"/>
                              </div>
                              <div class="oe_kanban_bottom_right">
                                  <img t-att-src="kanban_image('res.users', 'image_128', record.user_id.raw_value)"
                                      t-att-title="record.user_id.value" t-att-alt="record.user_id.value"
                                      class="oe_kanban_avatar"/>
                              </div>
                          </div>


                      </div>
                  </div>

                  </t>
              </templates>
          </kanban>

      </field>
    </record>


    <menuitem id="helpdesk_root_menu" name="HelpDesk" sequence="10" />
    <menuitem id="helpdesk_ticket_main_menu" name="Helpdesk" parent="helpdesk_root_menu" sequence="10" />
    <menuitem id="helpdesk_ticket_menu" parent="helpdesk_ticket_main_menu"
        action="helpdesk_ticket_action" sequence="10" />

</odoo>
