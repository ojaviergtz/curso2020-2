<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="helpdesk_tag_action" model="ir.actions.act_window">
        <field name="name">Tags</field>
        <field name="res_model">helpdesk.tag</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                    Click to create Tags
            </p>
        </field>
    </record>

    <record id="helpdesk_tag_view_tree" model="ir.ui.view">
        <field name="name">helpdesk.tag.view.tree</field>
        <field name="model">helpdesk.tag</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
            </tree>
        </field>
    </record>

    <record id="helpdesk_tag_view_form" model="ir.ui.view">
        <field name="name">helpdesk.tag.view.form</field>
        <field name="model">helpdesk.tag</field>
        <field name="arch" type="xml">
            <form string='Tags'>
                <group>
                    <field name="name"/>
                    <field name="ticket_ids" />
                </group>
            </form>
        </field>
    </record>

    <menuitem id="helpdesk_tag_menu" parent="helpdesk_ticket_main_menu"
        action="helpdesk_tag_action" sequence="20" />



</odoo>

